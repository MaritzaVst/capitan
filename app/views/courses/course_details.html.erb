<div class="container units-container">
  <div class="row">
    <div class="col-xs-10 col-md-offset-1">
      <h2 class="lh-21 light text-left mt-42 mb-0">contenido</h2>
      <div class="separator separator-sm separator-primary separator-left mb-28"></div>
      
      <div class="units">
        <% @course.units.order(:sequence).each_with_index do |unit,index| %>
          <% if unit.has_pages(current_user.branch_id) %>
            <div class="row unit">
            <div class="col-sm-6 pr-49">
              <div class="overview">
                <small class="thin">Semana 1</small>
                <h2><%= unit.title %></h2>
                <p><%= unit.description %></p>
              </div>
            </div>
            <div class="col-sm-6 pl-49">
              <div class="content-box clearfix">
                <ol>
                  <% unit.visible_pages(current_user.branch_id).each do |page| %>
                    <% if page.page_type != "closer" %>
                      <li class="progress-item">
                          <%= link_to mycourse_unit_page_path(@course,unit,page.id), 
                          :class => ((page.page_type == "editor" and page.answers.where(:user_id => current_user.id).first !=nil and page.answers.where(:user_id => current_user.id).first.result == nil) ? "red-viewed" : "viewed") do %>
                            
                            <span><%= page.title %></span>
                          <% end %>
                      </li>
                    <% end %>
                  <% end %>
                </ol>
              </div>
            </div>
          </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>