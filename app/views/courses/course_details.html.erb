            <h1 class="light text-uppercase"><%= @course.name %></h1>
            <p class="thin lh-md mb-42-md fz-21"><%= @course.description %></p>
             <%= link_to  do %>
                <%= image_tag "bullet-down.png",alt: "Laboratoria cÃ³digo que transforma", class: "ho" %>
                <span class="thin">Syllabus</span>
              <% end %>
          </div>
          <div class="col-md-5 pl-49 mt-63-md">
            <h4 class="ligth">LECCIONES COMPLETADAS</h4>
            <div class="progress progress-details">
              <div class="progress-bar progress-bar-details" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 65%;">
                65%
              </div>
